{% macro render(content) %}
	<div class="post">
		<img class="post__image" src= {{ content.srcImg}} alt="Click to design now" title="Click to design now"/>
		<div class="post__design" title="Click to design now">
			<div class="post__square">
				<a href="#">Design</a>
			</div>
			<div class="post__triangle"></div>
		</div>
		<h4 class="post__title">{{content.title}}</h4>
		<p class="post__date">{{content.text}}</p>
	</div>
{% endmacro %}
